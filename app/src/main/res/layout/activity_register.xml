<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/activity_register_bg"
    tools:context="com.yujie.hero.activity.RegisterActivity">

    <!--iocn-->
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/app"
        app:layout_heightPercent="18%"
        app:layout_marginTopPercent="3%"
        app:layout_widthPercent="15%" />

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="15%"
        app:layout_marginTopPercent="22%">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@mipmap/login_activity_phone_icon"
            app:layout_heightPercent="60%"
            app:layout_marginLeftPercent="5%"
            app:layout_widthPercent="10%" />

        <EditText
            android:id="@+id/register_activity_EditText_inputUserName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:hint="请输入真实姓名"
            android:textColor="#ffffff"
            android:textColorHint="#afdae1e1"
            android:textSize="20dp"
            app:layout_heightPercent="80%"
            app:layout_marginRightPercent="5%"
            app:layout_widthPercent="78%" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#afdae1e1"
            app:layout_marginBottomPercent="25%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%" />
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="15%"
        app:layout_marginTopPercent="36%">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@mipmap/login_activity_password_icon"
            app:layout_heightPercent="60%"
            app:layout_marginLeftPercent="5%"
            app:layout_widthPercent="10%" />

        <EditText
            android:id="@+id/register_activity_EditText_inputPwd"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:hint="请输入登陆密码"
            android:inputType="textPassword"
            android:textColor="#ffffff"
            android:textColorHint="#afdae1e1"
            android:textSize="20dp"
            app:layout_heightPercent="80%"
            app:layout_marginRightPercent="5%"
            app:layout_widthPercent="78%" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#afdae1e1"
            app:layout_marginBottomPercent="25%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%" />
    </android.support.percent.PercentRelativeLayout>

    <com.yujie.hero.view.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_heightPercent="15%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        app:layout_marginTopPercent="51%">

        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_widthPercent="40%">

            <RadioButton
                android:id="@+id/register_activity_RadioButton_boy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                android:text="Boy"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/register_activity_RadioButton_girl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:text="Girl"
                android:textSize="15dp" />
        </RadioGroup>

        <EditText
            android:id="@+id/register_activity_EditText_stuNum"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@null"
            android:hint="请输入你在班级的学号"
            android:inputType="number"
            android:textColorHint="#afdae1e1"
            android:textSize="15dp"
            app:layout_heightPercent="80%"
            app:layout_marginLeftPercent="20%"
            app:layout_marginRightPercent="5%"
            app:layout_widthPercent="30%" />

    </com.yujie.hero.view.PercentLinearLayout>

    <Button
        android:id="@+id/register_activity_Button_chooseClass"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/register_activity_choseclass_btn_bg"
        android:text="点击选择班级"
        android:textColor="#fff"
        android:textSize="23dp"
        app:layout_heightPercent="13%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginTopPercent="64%"
        app:layout_widthPercent="80%" />

    <Button
        android:id="@+id/register_activity_Button_register"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/register_activity_register_btn_bg"
        android:text="注册"
        android:textColor="#fff"
        android:textSize="30dp"
        app:layout_heightPercent="15%"
        app:layout_marginTopPercent="80%"
        app:layout_widthPercent="80%" />
</android.support.percent.PercentRelativeLayout>

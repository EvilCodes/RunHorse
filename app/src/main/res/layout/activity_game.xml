<?xml version="1.0" encoding="utf-8"?>
<com.yujie.hero.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yujie.hero.activity.GameActivity">

    <com.yujie.hero.view.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#dd161515"
        android:orientation="horizontal"
        app:layout_heightPercent="7%">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="13dp"
            android:layout_weight="1"
            android:text="Time:"
            android:textColor="#fff"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:textSize="13dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="13dp"
            android:layout_weight="1"
            android:text="Point:"
            android:textColor="#fff"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/point"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="Time:"
            android:textColor="#fff"
            android:textSize="13dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="13dp"
            android:layout_weight="1"
            android:text="Speed:"
            android:textColor="#fff"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/currentSpeed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:textSize="13dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="13dp"
            android:layout_weight="1.3"
            android:text="Sporter:"
            android:textColor="#fff"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/sporter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1.5"
            android:text="Time:"
            android:textColor="#fff"
            android:textSize="13dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="13dp"
            android:layout_weight="1.3"
            android:text="Course:"
            android:textColor="#fff"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/course"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.5"
            android:text="Time:"
            android:textColor="#fff"
            android:textSize="13dp" />
    </com.yujie.hero.view.PercentLinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#dd176be1"
        app:layout_heightPercent="10%">

        <TextView
            android:id="@+id/word_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:text="static"
            android:textColor="#000"
            android:textSize="15dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#dd161515"
        app:layout_heightPercent="10%">

        <EditText
            android:id="@+id/edit_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:background="@null"
            android:textColor="#fff"
            android:textSize="15dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/run_place"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/runhorse_place">

        <ImageView
            android:id="@+id/iv_runhorse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:scaleType="centerCrop"
             />

        <ImageView
            android:id="@+id/iv_slowhorse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_runhorse"
            android:layout_centerVertical="true"
            android:layout_marginTop="60dp"
            android:scaleType="centerInside"
            />

    </RelativeLayout>
</com.yujie.hero.view.PercentLinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<com.yujie.hero.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.yujie.hero.activity.ShowSortActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#c72b7ef2"
        app:layout_heightPercent="10%">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看排行"
            android:textColor="#fff"
            android:textSize="25dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <com.astuetz.PagerSlidingTabStrip
        android:layout_width="match_parent"
        android:id="@+id/sortTab"
        android:layout_height="0dp"
        app:pstsShouldExpand="true"
        android:textAlignment="center"
        app:pstsIndicatorHeight="3dp"
        app:layout_heightPercent="8%"/>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sortViewPager"
        >

    </android.support.v4.view.ViewPager>
</com.yujie.hero.view.PercentLinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/item_card_root"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    >
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/activity_login_bg"
            android:id="@+id/level_avatar"
            android:visibility="gone"
            android:layout_margin="1dp"
            />
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="4"
            android:gravity="center"
            android:textSize="20dp"
            android:id="@+id/level_number"
            android:layout_margin="3dp"
             />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="23%"
            android:gravity="center"
            android:id="@+id/item_user_name"
            android:layout_centerVertical="true"
            app:layout_marginLeftPercent="24%" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="230"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/item_user_name"
            android:id="@+id/item_user_grade"
            app:layout_marginLeftPercent="5%" />
        <Button
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text="挑战"
            android:layout_alignParentRight="true"
            app:layout_marginRightPercent="10%"
            android:background="@drawable/login_activity_login_btn_bg"
            android:layout_centerVertical="true"
            android:id="@+id/item_challenge_btn"
            />
    </android.support.percent.PercentRelativeLayout>
</android.support.v7.widget.CardView>